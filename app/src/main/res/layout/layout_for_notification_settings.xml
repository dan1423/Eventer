<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/img_exit_notitication"
        android:layout_width="68dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_close_black_24dp"
        tools:layout_editor_absoluteY="3dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_exit_notitication"
        app:layout_constraintVertical_bias="0.434">


        <Switch
            android:id="@+id/switch_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:gravity="center"
            android:text="NOTIFICATION"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="286dp" />

        <Switch
            android:id="@+id/switch_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch_notification"
            android:gravity="center"
            android:text="VIBRATE"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="335dp" />

        <Spinner
            android:id="@+id/spinner_reminder"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:scrollbarSize="24sp"
            android:textAlignment="textStart"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch_vibrate"
            android:gravity="center"
            android:text="REMIND ME:"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>