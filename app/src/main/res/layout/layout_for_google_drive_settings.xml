<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ProgressBar
            android:id="@+id/progressBar_google_drive_settings"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_back_to_Settings"
            android:layout_width="66dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_choose_account"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="CHOOSE DRIVE ACCOUNT" />

        <Button
            android:id="@+id/btn_import_events"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="IMPORT EVENTS FROM DRIVE" />

        <Button
            android:id="@+id/btn_export_events"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="EXPORT EVENTS TO DRIVE" />

        <Button
            android:id="@+id/btn_get_event_template"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:text="SEND EVENT TEMPLATE TO GMAIL" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>