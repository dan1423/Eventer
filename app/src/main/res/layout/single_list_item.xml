<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_list_item_event_name"
        android:layout_width="219dp"
        android:layout_height="50dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/txt_list_item_event_date"
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txt_list_item_event_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_list_item_event_type"
        android:layout_width="164dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txt_list_item_event_date"
        android:layout_toEndOf="@+id/txt_list_item_event_name"
        android:text="TextView" />

</android.widget.RelativeLayout>