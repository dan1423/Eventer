<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout_single_item"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_list_item_event_name"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text="TextView"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/txt_list_item_event_date"
        android:layout_width="171dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txt_list_item_event_name"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/txt_list_item_event_type"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_list_item_event_date"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/txt_list_item_event_name"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18dp"
        android:textStyle="italic" />

</android.widget.RelativeLayout>